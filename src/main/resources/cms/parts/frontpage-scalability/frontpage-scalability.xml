<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part-component>
    <display-name>Frontpage scalability</display-name>
    <config>
        <field-set name="info">
            <label>Info</label>
            <items>
                <input name="heading" type="TextLine">
                    <label>Heading</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>
                <input name="text" type="TextArea">
                    <label>Body text</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>
            </items>
        </field-set>
        <field-set name="link">
            <label>Link</label>
            <items>
              <inline mixin="link-url"/>
            </items>
        </field-set>
    </config>
</part-component>
