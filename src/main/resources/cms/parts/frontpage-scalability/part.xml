<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part-component>
    <display-name>Frontpage scalability</display-name>
    <config>
        <field-set name="info">
            <label>Info</label>
            <items>
                <input name="heading" type="TextLine">
                    <label>Heading</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>
                <input name="text" type="TextArea">
                    <label>Body text</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>
            </items>
        </field-set>
        <field-set name="link">
            <label>Link</label>
            <items>
                <input type="TextLine" name="linkText">
                    <label>Link text</label>
                    <occurrences minimum="1" maximum="1"/>
                </input>
                <input type="ContentSelector" name="linkPage">
                    <label>Link page</label>
                    <occurrences minimum="0" maximum="1"/>
                    <config>
                        <relationship-type>system:reference</relationship-type>
                        <allow-content-type>landing-page</allow-content-type>
                    </config>
                </input>
                <input type="TextLine" name="linkUrl">
                    <label>Link URL</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>
            </items>
        </field-set>
    </config>
</part-component>
