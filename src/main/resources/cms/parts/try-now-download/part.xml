<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part-component>
  <display-name>Try now downloads</display-name>
  <config>
    <field-set name="Cloud info">
      <label>Cloud info</label>
      <items>
        <input type="TextLine" name="textBelowForm">
          <label>Text below form</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input type="TextLine" name="thankYou">
          <label>Thank you note</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input type="TextArea" name="communityVersion">
          <label>Community version</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input type="ContentSelector" name="saveFolder">
          <label>Save folder</label>
          <occurrences minimum="1" maximum="1"/>
          <config>
            <relationship-type>system:reference</relationship-type>
            <allow-content-type>base:folder</allow-content-type>
          </config>
        </input>
      </items>
    </field-set>
    <field-set name="Download Now">
      <label>Download Now</label>
      <items>
          <input type="TextLine" name="downloadUrl">
              <label>Download URL</label>
              <occurrences minimum="1" maximum="1"/>
          </input>
        <input type="TextArea" name="description">
          <label>Download text</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
      </items>
    </field-set>
  </config>
</part-component>