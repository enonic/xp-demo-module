<?xml version="1.0" encoding="UTF-8"?>
<content-type>
    <display-name>Case study</display-name>
    <content-display-name-script>$('title')</content-display-name-script>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <is-built-in>false</is-built-in>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="basic">
            <label>Case study</label>
            <items>
                <input type="TextLine" name="title">
                    <label>Title</label>
                    <immutable>false</immutable>
                    <indexed>true</indexed>
                    <occurrences minimum="1" maximum="1"/>
                </input>
                <input type="TextArea" name="preface">
                    <label>Preface</label>
                    <immutable>false</immutable>
                    <indexed>true</indexed>
                    <occurrences minimum="1" maximum="1"/>
                </input>
                <input type="TextArea" name="bodyText">
                    <label>Body text</label>
                    <immutable>false</immutable>
                    <indexed>true</indexed>
                    <occurrences minimum="0" maximum="1"/>
                </input>
                <input type="TextLine" name="linkText">
                    <label>Link text</label>
                    <immutable>false</immutable>
                    <indexed>true</indexed>
                    <occurrences minimum="1" maximum="1"/>
                </input>
                <input type="TextLine" name="linkUrl">
                    <label>Link URL</label>
                    <immutable>false</immutable>
                    <indexed>true</indexed>
                    <occurrences minimum="1" maximum="1"/>
                </input>
            </items>
        </field-set>
        <field-set name="quote">
            <label>Quote</label>
            <items>
                <input type="TextArea" name="quote">
                    <label>Quote</label>
                    <immutable>false</immutable>
                    <indexed>true</indexed>
                    <occurrences minimum="0" maximum="1"/>
                </input>
                <input type="TextLine" name="quoteName">
                    <label>Quote Name</label>
                    <immutable>false</immutable>
                    <indexed>true</indexed>
                    <occurrences minimum="0" maximum="1"/>
                </input>
                <input type="ImageSelector" name="quoteImage">
                    <label>Quote image</label>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <occurrences minimum="0" maximum="1"/>
                    <config></config>
                </input>
            </items>
        </field-set>
        <field-set name="screenshots">
            <label>Screenshots</label>
            <items>
                <input type="ImageSelector" name="screenDesktop">
                    <label>Desktop</label>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <occurrences minimum="0" maximum="1"/>
                    <config></config>
                </input>
                <input type="ImageSelector" name="screenMobile">
                    <label>Mobile</label>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <occurrences minimum="0" maximum="1"/>
                    <config></config>
                </input>
                <input type="ImageSelector" name="screenTablet">
                    <label>Tablet</label>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <occurrences minimum="0" maximum="1"/>
                    <config></config>
                </input>
            </items>
        </field-set>
    </form>
</content-type>